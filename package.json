{
  "name": "ts-to-mongoose",
  "version": "0.0.10",
  "keywords": [
    "typescript",
    "convert",
    "mongoose",
    "schema"
  ],
  "description": "typescript convert to mongoose schema",
  "main": "dist/index.js",
  "bin": {
    "ts-to-mongoose": "bin.js"
  },
  "scripts": {
    "pub": "yarn lint:fix && yarn jest -u && yarn build && yarn publish .",
    "dev": "ts-node src/cli.ts -s examples/ts/*.ts -d examples/schema",
    "dev:watch": "ts-node-dev --respawn src/index.ts",
    "clean": "rimraf dist/*",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "start": "node .",
    "check-types": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "eslint": "eslint src/**/*.ts",
    "eslint:fix": "eslint src/**/*.ts --fix",
    "lint": "npm-run-all eslint check-types",
    "lint:fix": "npm-run-all eslint:fix check-types format"
  },
  "dependencies": {
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "opts": "^2.0.2",
    "typescript-json-schema": "^0.45.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.5",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": ">=4",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "mongoose": "^5.11.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.ts": "tsc --noEmit"
  }
}
